<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:com.infirmarium.client.core.components.elements.simple">
	<g:VerticalPanel addStyleNames="full-width">
		<g:FlowPanel ui:field="topSlot" addStyleNames="page-top-slot">
			<s:LargeIconWidget ui:field="icon" addStyleNames="float-left" />
			<s:TitledDescriptionWidget ui:field="description"
				addStyleNames="default-head-element screen-description" />
			<s:ControlLinkSheetWidget maxRows="3"
				maxCols="3" ui:field="linkSheet" addStyleNames="float-right" />
		</g:FlowPanel>
		<g:SimplePanel ui:field="contentSlot"
			addStyleNames="page-separator page-content-slot">
		</g:SimplePanel>
	</g:VerticalPanel>
</ui:UiBinder> 