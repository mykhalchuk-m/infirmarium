<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!--           *****           Health Worker        ******          -->
	<class name="com.hospital.hr.HealthWorker" table="HealthWorker_tbl"
		lazy="false">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="firstName" column="first_Name" length="30" />
		<property name="lastName" column="last_Name" length="30" />
		<property name="middleName" column="middle_Name" length="30" />
		<property name="speciality" column="speciality" length="50" />
		<property name="login" column="login" length="30" />
		<property name="password" column="password" length="30" />
		<property name="exist" column="exist" />
		<property type="com.hospital.hr.RoleEnum" name="role"
			length="10" />

	</class>

	<!--           *****          Blood Group        ******          -->
	<class name="com.hospital.hr.BloodGroup" table="BloodGroup_tbl"
		lazy="false">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="bloodGroupValue" column="blood_Group_Value" />

	</class>

	<!--           *****          Patient      ******          -->
	<class name="com.hospital.hr.Patient" table="Patients_tbl"
		lazy="false">
		<id name="id">
			<generator class="increment" />
		</id>

		<property name="firstName" column="first_Name" length="30" />
		<property name="middleName" column="middle_Name" length="30" />
		<property name="lastName" column="last_Name" length="30" />
        <one-to-one name="address" class="com.hospital.hr.Address" cascade="all" constrained="true" />
		<property name="birthday" column="birthday" type="date" />
		<property type="com.hospital.hr.SexTypesEnum" name="sex" />

		<many-to-one name="bloodGroup"
			class="com.hospital.hr.BloodGroup" column="bloodGroup_ID"
			lazy="false" />

	</class>

    <!--           *****         Address           ******          -->
    <class name="com.hospital.hr.Address" table="Address_tbl" lazy="false">
        <id name="id">
            <generator class="increment" />
        </id>
        <property name="country" column="country" length="50"/>
        <property name="region" column="region" length="50"/>
        <property name="district" column="district" length="50"/>
        <property name="city" column="city" length="50"/>
        <property name="street" column="street" length="50"/>
        <property name="home" column="home" length="50"/>
        <property name="fletNumber" column="fletNumber" length="50"/>
        
    </class>

	<!--           *****         Department        ******          -->
	<class name="com.hospital.hr.Department" table="Department_tbl"
		lazy="false">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="name" column="name" unique="true" length="40"
			type="string" />

		<set name="modules" cascade="save-update" table="modules_of_dep_tbl"
			lazy="false">
			<key column="id_modules_of_dep" />
			<many-to-many class="com.hospital.modulecreator.Module"
				lazy="false" />
		</set>

		<set name="analyses" cascade="save-update" table="analyses_of_dep_tbl"
			lazy="false">
			<key column="id_analyses_of_dep" />
			<many-to-many class="com.hospital.modulecreator.Analysis"
				lazy="false" />
		</set>

		<set name="healthWorkers" cascade="all"
			table="health_Workers_of_dep_tbl" lazy="false">
			<key column="id_health_Workers_of_dep" />
			<many-to-many class="com.hospital.hr.HealthWorker"
				lazy="false" />
		</set>
	</class>

</hibernate-mapping>