<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!--           *****           MODULE        ******          -->
	<class name="com.hospital.modulecreator.Module" table="module_tbl">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="moduleName" column="module_name"/>
		<map name="parameters" cascade="all" >
			<key column="id_module" />
			<map-key type="string" column="record_name" />
			<one-to-many class="com.hospital.modulecreator.Record" />
		</map>
	</class>

	<!--           *****           RECORD         ******          -->
	<class name="com.hospital.modulecreator.Record" table="record_tbl" >
		<id name="id">
			<generator class="increment" />
		</id>

		<one-to-one name="field" class="com.hospital.modulecreator.Field"
			cascade="all" />
	</class>

	<!--           *****           FIELD          ******          -->
	<class name="com.hospital.modulecreator.Field" table="field_tbl">
		<id name="id">
			<generator class="increment" />
		</id>

		<property type="com.hospital.modulecreator.FieldTypeEnum" name="type" />

		<set name="values" table="field_values_tbl" >
			<key column="val_id" />
			<element type="string" column="value" />
		</set>
	</class>

</hibernate-mapping>